<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/contenedorPrincipal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/contenedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comportamiento"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <CheckBox
            android:layout_below="@id/texto"
            android:id="@+id/trabajaTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trabaja"/>
        <CheckBox
            android:layout_below="@id/trabajaTextBox"
            android:id="@+id/noTrabajaTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No trabaja"/>
        <CheckBox
            android:layout_below="@id/noTrabajaTextBox"
            android:id="@+id/molestaTextBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Molesta"/>
        <RadioButton
            android:layout_marginLeft="20dp"
            android:layout_below="@id/trabajaTextBox"
            android:layout_toRightOf="@id/trabajaTextBox"
            android:id="@+id/avisarRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avisar a los padres"/>
        <EditText
            android:layout_below="@id/noTrabajaTextBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Escribe algo"/>
    </RelativeLayout>
</RelativeLayout>